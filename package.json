{
  "name": "user-presence-app",
  "version": "1.0.0",
  "description": "Build a Presence service, similar to that of google docs, which shows people that are currently viewing a particular doc.",
  "main": "src/server/app.js",
  "repository": {
    "type": "git",
    "url": " https://git.heroku.com/user-presense-app"
  },
  "keywords": [
    "node",
    "heroku",
    "express"
  ],
  "author": "Veeresh RV",
  "license": "MIT",
  "engines": {
    "node": "10.x",
    "npm": "6.x"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime"
    ],
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "**/build/**",
      "./dist/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "scripts": {
    "start": "npm run prod",
    "build-client": "cd ./src/client && rimraf ./build && npm run build",
    "build-server": "npm-run-all clean transpile",
    "build": "npm run build-server",
    "server": "node ./dist/app.js",
    "clean": "rimraf dist",
    "dev": "NODE_ENV=dev && npm-run-all build server",
    "prod": "NODE_ENV=prod && npm run server",
    "transpile": "babel ./src/server --out-dir dist",
    "watch:dev": "nodemon",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.7",
    "socket.io": "^2.3.0",
    "@babel/runtime": "^7.9.2",
    "@babel/plugin-transform-runtime": "^7.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}